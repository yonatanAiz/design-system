{
  "name": "design-system",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "lint-staged": {
    "*.{ts,tsx,css}": [
      "yarn workspace library lint:fix",
      "yarn workspace library prettier:write"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:library": "yarn workspace library build",
    "build:storybook": "yarn workspace library build-storybook",
    "build:website": "yarn workspace website build",
    "build": "yarn build:library && yarn build:storybook",
    "start:website": "yarn workspace website start",
    "storybook": "yarn workspace library storybook",
    "test:library": "yarn workspace library test",
    "storyshoots:library": "yarn workspace library storyshoots",
    "lint:library": "yarn workspace library lint",
    "prettier:check:library": "yarn workspace library prettier:check",
    "prepare": "husky install",
    "lint": "lint-staged"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0"
  }
}
